{
  "name": "essentialdecorators",
  "version": "0.0.1",
  "description": "EssentialDecorators, useful helpers and utilities as TypeScript decorators",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha -r ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "cover": "NODE_ENV=test nyc npm t && nyc report --reporter=text-lcov",
    "build:lib": "rm -rf dist && ntsc",
    "release": "standard-version",
    "deploy": "npm run build:lib && cp package.json dist/package.json && cp README.md dist/README.md && npm publish --access=public dist",
    "precommit": "lint-staged",
    "prettier:write": "prettier --write './src/**/*.ts'",
    "prettier:check": "prettier -l './src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danrevah/essentialdecorators.git"
  },
  "keywords": [
    "typescript",
    "decorator",
    "decorators",
    "utilities",
    "utils",
    "helpers"
  ],
  "author": "Dan Revah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danrevah/essentialdecorators/issues"
  },
  "homepage": "https://github.com/danrevah/essentialdecorators#readme",
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^4.0.1",
    "ntypescript": "1.201706190042.1",
    "nyc": "^11.3.0",
    "prettier": "^1.13.7",
    "standard-version": "^4.4.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "wrappy": "^1.0.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}

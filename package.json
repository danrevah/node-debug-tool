{
  "name": "EssentialDecorators",
  "version": "0.0.1",
  "description": "EssentialDecorators, useful helpers and utilities as TypeScript decorators",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha -r ts-node/register src/*.spec.ts src/**/*.spec.ts",
    "cover": "NODE_ENV=test nyc npm t && nyc report --reporter=text-lcov",
    "build:lib": "rm -rf dist && ntsc",
    "release": "standard-version",
    "deploy": "npm run build:lib && cp package.json dist/package.json && cp README.md dist/README.md && npm publish --access=public dist",
    "prettier:write": "prettier --write './src/**/*.ts'",
    "prettier:check": "prettier -l './src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danrevah/essentialdecorators.git"
  },
  "keywords": [
    "typescript",
    "decorator",
    "decorators",
    "utilities",
    "utils",
    "helpers"
  ],
  "author": "Dan Revah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danrevah/essentialdecorators/issues"
  },
  "homepage": "https://github.com/danrevah/essentialdecorators#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/travis-cli": "^7.6.1",
    "@types/chai": "^4.0.5",
    "@types/chai-spies": "^1.0.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "conventional-changelog-atom": "^2.0.1",
    "coveralls": "^3.0.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "ntypescript": "1.201706190042.1",
    "nyc": "^14.1.1",
    "prettier": "^1.13.7",
    "standard-version": "^6.0.1",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "wrappy": "^1.0.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
